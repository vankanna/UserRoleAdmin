@{
    ViewData["Title"] = "Users";
}

@model IEnumerable<AppUser>

<h1>All Users</h1>

<div class="text-danger" asp-validation-summary="All"></div>

@if (Model.Count() == 0) {
    <p>No User Accounts</p>
} else {
    <table class="table table-sm table-bordered">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Email</th>
                <td style="border-top-style:hidden;border-right-style:hidden;border-bottom-style:hidden;"></td>

            </tr>
        </thead>
            @foreach (AppUser user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td style="border-top-style:hidden;border-right-style:hidden;border-bottom-style:hidden;">
                        <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                            <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@user.Id">Edit</a>
                            <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
    </table>
}

<a class="btn btn-outline-primary" asp-action="Create">Create</a>